<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Otel Anasayfa</title>
    <style>
        /* Genel stil ayarları */
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            overflow-x: hidden; /* Yatay kaydırmayı kapatır */
        }

        /* Video stil ayarları */
        .background-video {
            width: 100%; /* Ekranın tamamını kaplaması için genişlik 100% */
            height: auto; /* Oranı koruyarak video boyutunu otomatik ayarlar */
            object-fit: cover; /* Video elementinin container içinde tamamen doldurmasını sağlar */
            display: block; /* Görünüm düzeni olarak block olması */
            position: relative; /* Göreceli konumlandırma */
            z-index: -1; /* Diğer içeriklerin üzerinde kalması */
            top: 0; /* Sayfanın üst kısmından başlaması */
            left: 0; /* Sayfanın sol kısmından başlaması */
        }

        /* Buton container stil ayarları */
        .button-container {
            position: absolute; /* Mutlak bir konumlandırma kullanarak içeriği belirli bir konumda sabitler */
            bottom: 20px; /* Sayfanın altından 20 piksel yukarıda olacak şekilde konumlandırır */
            width: 100%; /* Genişliği sayfanın tamamını kaplayacak şekilde ayarlar */
            text-align: center; /* İçindeki butonların merkezi hizalanmasını sağlar */
            z-index: 1; /* Video elementinin altında olacak şekilde butonların z-index değeri 1 olarak ayarlandı */
        }

            /* Buton stil ayarları */
            .button-container button {
                padding: 20px 20px; /* Buton içeriğinin iç kenar dolgusu (padding) ayarlandı */
                margin: 0 20px; /* Butonların dış kenar boşluğu (margin) ayarlandı */
                font-size: 16px; /* Buton metin boyutu ayarlandı */
                cursor: pointer; /* Fare üzerine geldiğinde işaretçi türünü gösterir */
                border: none; /* Kenarlık olmamasını sağlar */
                border-radius: 3px; /* Kenar yarıçapı ayarlandı */
                background-color: #007bff; /* Arkaplan rengi */
                color: black; /* Metin rengi */
                border-style: solid; /* Kenar stili */
                border-color: black; /* Kenar rengi */
            }

                /* Buton hover stil ayarları */
                .button-container button:hover {
                    background-color: #ffffff; /* Fare üzerine geldiğinde butonun arka plan rengi değişir */
                }

        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .room-carousel {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            position: relative;
            overflow: hidden;
            height: 500px;
        }

        .room-card-container {
            display: flex;
            width: 100%;
            transition: transform 0.5s ease;
        }

        .room-card {
            min-width: 100%;
            height: 100%;
            text-align: center;
            background-color: cadetblue;
        }

            .room-card img {
                width: 100%;
                height: auto;
                max-height: 100%;
            }

            .room-card h3 {
                margin: 10px 0;
            }

        .nav-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            border: none;
            padding: 10px;
            cursor: pointer;
            color: white;
            font-size: 18px;
            z-index: 1;
        }

            .nav-button:hover {
                background-color: rgba(0, 0, 0, 0.7);
            }

        .prev-button {
            left: 10px;
        }

        .next-button {
            right: 10px;
        }
    </style>
</head>
<body>

    <video class="background-video"
           /* src="~/videos/genelbakisvideo.mp4" */
           controls
           autoplay
           loop></video>

    <div class="button-container">
        <button onclick="location.href='/konum';">Konum</button>
        <button onclick="location.href='/konaklama';">Konaklama</button>
        <button onclick="location.href='/yemek';">Yemek</button>
        <button onclick="location.href='/spa';">Spa</button>
        <button onclick="location.href='/etkinlikler';">Etkinlikler</button>
    </div>

    <!-- Sayfanın geri kalanı -->
    <div style="height: 2000px; background-color: #f0f0f0; padding: 20px;">
        <!-- Burada diğer içerikler yer alabilir -->


        <div class="room-carousel">
            <button class="nav-button prev-button" onclick="showPrev()">‹</button>
            <div class="room-card-container">
                <div class="room-card" id="card-1">
                    <img src="~/images/gorsel1.jpg">
                    <h3>Standard Room</h3>
                </div>
                <div class="room-card" id="card-2">
                    <img src="~/images/gorsel2.jpg">
                    <h3>Deluxe Room</h3>
                </div>
                <div class="room-card" id="card-3">
                    <img src="~/images/gorsel3.jpg">
                    <h3>Executive Room</h3>
                </div>
                <div class="room-card" id="card-4">
                    <img src="~/images/gorsel4.jpg">
                    <h3>Junior Suite</h3>
                </div>
                <div class="room-card" id="card-5">
                    <img src="~/images/gorsel5.jpg">
                    <h3>Executive Suite</h3>
                </div>
            </div>
            <button class="nav-button next-button" onclick="showNext()">›</button>
        </div>

        <script>
            let currentCardIndex = 0;
            const cards = document.querySelectorAll('.room-card');
            const cardContainer = document.querySelector('.room-card-container');

            function showCard(index) {
                const offset = -index * 100;
                cardContainer.style.transform = `translateX(${offset}%)`;
            }

            function showPrev() {
                currentCardIndex = (currentCardIndex > 0) ? currentCardIndex - 1 : cards.length - 1;
                showCard(currentCardIndex);
            }

            function showNext() {
                currentCardIndex = (currentCardIndex < cards.length - 1) ? currentCardIndex + 1 : 0;
                showCard(currentCardIndex);
            }

            document.addEventListener('DOMContentLoaded', () => {
                showCard(currentCardIndex);
            });
        </script>
    </div>

</body>
</html>
