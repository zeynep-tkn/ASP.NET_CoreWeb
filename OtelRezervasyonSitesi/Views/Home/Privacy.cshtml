<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Otel Odaları Karuseli</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh; /* Ekran yüksekliğinin tamamını kaplar */
            background-color: #f0f0f0;
        }

        .room-carousel {
            position: relative;
            width: 100%; /* Kartların genişliği sayfanın tamamını kaplar */
            max-width: 1200px; /* Maksimum genişlik belirlendi */
            overflow: hidden;
        }

        .room-card-container {
            display: flex;
            transition: transform 0.5s ease;
        }

        .room-card {
            flex: 0 0 100%; /* Kartlar eşit genişlikte, tam sayfa genişliğinde */
            margin-right: 20px;
            text-align: center;
            border-radius: 8px;
            overflow: hidden;
        }

            .room-card img {
                width: 100%;
                height: auto;
                object-fit: cover;
                border-radius: 8px 8px 0 0;
            }

            .room-card h3 {
                margin: 10px 0;
                background-color: #333;
                color: white;
                padding: 10px;
            }

        .nav-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            font-size: 20px;
            z-index: 1;
        }

        .prev-button {
            left: 10px;
        }

        .next-button {
            right: 10px;
        }
    </style>
</head>
<body>
    <div class="room-carousel">
        <button class="nav-button prev-button" onclick="showPrev()">‹</button>
        <div class="room-card-container">
            <div class="room-card" id="card-1">
                <img src="~/images/standartoda.jpg" alt="Standard Room">
                <h3>Standard Room</h3>
            </div>
            <div class="room-card" id="card-2">
                <img src="deluxe-room.jpg" alt="Deluxe Room">
                <h3>Deluxe Room</h3>
            </div>
            <div class="room-card" id="card-3">
                <img src="executive-room.jpg" alt="Executive Room">
                <h3>Executive Room</h3>
            </div>
            <div class="room-card" id="card-4">
                <img src="junior-suite.jpg" alt="Junior Suite">
                <h3>Junior Suite</h3>
            </div>
            <div class="room-card" id="card-5">
                <img src="executive-suite.jpg" alt="Executive Suite">
                <h3>Executive Suite</h3>
            </div>
        </div>
        <button class="nav-button next-button" onclick="showNext()">›</button>
    </div>

    <script>
        const cardContainer = document.querySelector('.room-card-container');
        const cards = document.querySelectorAll('.room-card');
        const prevButton = document.querySelector('.prev-button');
        const nextButton = document.querySelector('.next-button');

        let currentIndex = 0;
        const cardWidth = cards[0].offsetWidth + 20; // Kart genişliği ve sağdaki boşluk

        function showPrev() {
            if (currentIndex > 0) {
                currentIndex--;
                updateCardContainer();
            }
        }

        function showNext() {
            if (currentIndex < cards.length - 3) {
                currentIndex++;
                updateCardContainer();
            }
        }

        function updateCardContainer() {
            const translateX = -currentIndex * cardWidth;
            cardContainer.style.transform = `translateX(${translateX}px)`;
        }
    </script>

</body>
</html>



