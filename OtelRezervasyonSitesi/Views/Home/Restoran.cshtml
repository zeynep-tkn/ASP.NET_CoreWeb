<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Room Types</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .room-carousel {
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 100%;
            position: relative;
            overflow: hidden;
            height: 500px;
        }

        .room-card-container {
            display: flex;
            width: 100%;
            transition: transform 0.5s ease;
          
        }

        .room-card {
            min-width: 100%;
            height: 100%;
            text-align: center;
            background-color:cadetblue;
          
           
        }

            .room-card img {
                width: 100%;
                height: auto;
                max-height: 100%;
            }

            .room-card h3 {
                margin: 10px 0;
            }

        .nav-button {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background-color: rgba(0, 0, 0, 0.5);
            border: none;
            padding: 10px;
            cursor: pointer;
            color: white;
            font-size: 18px;
            z-index: 1;
        }

            .nav-button:hover {
                background-color: rgba(0, 0, 0, 0.7);
            }

        .prev-button {
            left: 10px;
        }

        .next-button {
            right: 10px;
        }
    </style>
</head>
<body>
    <div class="room-carousel">
        <button class="nav-button prev-button" onclick="showPrev()">‹</button>
        <div class="room-card-container">
            <div class="room-card" id="card-1">
                <img src="~/images/gorsel1.jpg" >
                <h3>Standard Room</h3>
            </div>
            <div class="room-card" id="card-2">
                <img src="~/images/gorsel2.jpg" >
                <h3>Deluxe Room</h3>
            </div>
            <div class="room-card" id="card-3">
                <img src="~/images/gorsel3.jpg">
                <h3>Executive Room</h3>
            </div>
            <div class="room-card" id="card-4">
                <img src="~/images/gorsel4.jpg">
                <h3>Junior Suite</h3>
            </div>
            <div class="room-card" id="card-5">
                <img src="~/images/gorsel5.jpg">
                <h3>Executive Suite</h3>
            </div>
        </div>
        <button class="nav-button next-button" onclick="showNext()">›</button>
    </div>

    <script>
        let currentCardIndex = 0;
        const cards = document.querySelectorAll('.room-card');
        const cardContainer = document.querySelector('.room-card-container');

        function showCard(index) {
            const offset = -index * 100;
            cardContainer.style.transform = `translateX(${offset}%)`;
        }

        function showPrev() {
            currentCardIndex = (currentCardIndex > 0) ? currentCardIndex - 1 : cards.length - 1;
            showCard(currentCardIndex);
        }

        function showNext() {
            currentCardIndex = (currentCardIndex < cards.length - 1) ? currentCardIndex + 1 : 0;
            showCard(currentCardIndex);
        }

        document.addEventListener('DOMContentLoaded', () => {
            showCard(currentCardIndex);
        });
    </script>
</body>
</html>













